<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackGround"
    android:outlineSpotShadowColor="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/enterAmount"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/greyFront"
            android:text="Enter amount"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/Amount"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/greyFront"
            android:text="Amount"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/cost"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/greyFront"
            android:text="Your bill is..."
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/badService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.333"
            android:backgroundTint="#F44336"
            android:text="Bad service"
            android:textSize="19dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/normalService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:backgroundTint="#FF9800"
            android:text="Normal service"
            android:textSize="19dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/awesomeService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:backgroundTint="#4CAF50"
            android:text="Awesome service"
            android:textSize="19dp"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>